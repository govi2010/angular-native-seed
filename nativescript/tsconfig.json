{
    "compilerOptions": {
        "baseUrl": ".",
        "paths": {
            "app/*": [
                "app/app/*"
            ],
            "~/app/*": [
                "app/app/*"
            ],
            "*": [
                "./node_modules/tns-core-modules/*",
                "./node_modules/*"
            ]
        },
        "target": "es5",
        "module": "commonjs",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "noEmitHelpers": true,
        "noEmitOnError": true,
        "moduleResolution": "node",
        "importHelpers": false,
        "lib": [
            "dom",
            "es6",
            "es2015.iterable"
        ]
    },
    "include": [
        "app/**/*"
    ],
    "exclude": [
        "node_modules",
        "platforms",
        "**/*.aot.ts",
        "hooks",
        "src",
        "gulpfile.js"
    ]
}